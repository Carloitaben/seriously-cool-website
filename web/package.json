{
  "name": "seriously-cool-website",
  "description": "Frontend for seriouslycool.website",
  "author": "Carlo Dom√≠nguez <hello@carlo.works>",
  "sideEffects": false,
  "license": "UNLICENSED",
  "scripts": {
    "predev": "yarn graphql-codegen --config codegen.yml",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/index.css -o src/styles/index.css",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "dev:remix": "remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public --binding $(cat .env) --kv cmsCache",
    "dev:css": "tailwindcss -w -i ./styles/index.css -o src/styles/index.css",
    "dev": "concurrently \"npm run dev:css\" \"remix build && run-p dev:*\""
  },
  "dependencies": {
    "@mantine/hooks": "^4.2.11",
    "@portabletext/react": "^1.0.6",
    "@remix-run/cloudflare": "^1.6.3",
    "@remix-run/cloudflare-pages": "^1.6.3",
    "@remix-run/react": "^1.6.1",
    "@sanity/asset-utils": "^1.2.3",
    "@sanity/image-url": "^1.0.1",
    "cross-env": "^7.0.3",
    "fontfaceobserver": "^2.3.0",
    "framer-motion": "^6.3.16",
    "graphql": "^16.5.0",
    "graphql-request": "^4.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.14.0",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.5.1",
    "@graphql-codegen/typescript-operations": "2.4.2",
    "@remix-run/dev": "^1.6.1",
    "@remix-run/eslint-config": "^1.6.1",
    "@types/fontfaceobserver": "^2.1.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.2.2",
    "eslint": "^8.18.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "tailwindcss": "^3.1.4",
    "typescript": "^4.7.4",
    "wrangler": "^2.0.16"
  },
  "engines": {
    "node": ">=14"
  }
}
