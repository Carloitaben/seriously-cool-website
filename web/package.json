{
  "name": "seriously-cool-website",
  "description": "Frontend for seriouslycool.website",
  "author": "Carlo Dom√≠nguez <hello@carlo.works>",
  "sideEffects": false,
  "license": "UNLICENSED",
  "scripts": {
    "generate": "graphql-codegen --config codegen.yml",
    "predev": "yarn generate",
    "dev": "concurrently \"npm run dev:css\" \"remix dev\"",
    "dev:css": "tailwindcss -w -i ./styles/index.css -o src/styles/index.css",
    "prebuild": "yarn generate",
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -m -i ./styles/index.css -o src/styles/index.css",
    "prestart": "yarn generate",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@portabletext/react": "^1.0.6",
    "@remix-run/node": "^1.4.3",
    "@remix-run/react": "^1.4.3",
    "@remix-run/serve": "^1.4.3",
    "fontfaceobserver": "^2.1.0",
    "framer-motion": "^6.3.3",
    "graphql": "^16.5.0",
    "graphql-request": "^4.2.0",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "zustand": "^4.0.0-rc.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@remix-run/dev": "^1.4.3",
    "@remix-run/eslint-config": "^1.4.3",
    "@types/fontfaceobserver": "^2.1.0",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "autoprefixer": "^10.4.7",
    "concurrently": "^7.1.0",
    "eslint": "^8.15.0",
    "postcss": "^8.4.13",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  }
}
